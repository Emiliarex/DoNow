<div class="form-group">
  <div class="col-md-2">
  
<% if @todo.priority.present? %>
  <%= form_for [@category, @todo, @todo.priority] do |f| %>
  <%= f.label :urgency %>
  <%= f.number_field :urgency, min: 1, max: 5, class: "form-control" %>
  <% end %>
  <% else %>
  <%= form_for [@category, @todo, Priority.new] do |f| %>
  <%= f.label :urgency %> 
  <%= f.number_field :urgency, min:1, max: 5, class: "form-control" %>
  <% end %>
    <%= form_for [@category, @todo, Priority.new] do |f| %>
    <%= f.submit "Set Urgency", class: 'btn btn-info' %>
    <% end %>
  <% end %>
 
  </div>
</div>