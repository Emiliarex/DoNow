<div class="box_wrapper">
<div class="form-group">




<div class="col-md-7 box_content"> 
  <h1><%= @category.title %></h1>
  </br>

  <div class="form-group">
  <% @todos.each do |t| %> 
    <div class="col-md-13 box_content_element">
      <%= link_to "Delete To-Do", category_todo_path(@category, t), method: :delete, class: 'btn btn-danger btn-xs delete_button_todo', data: { confirm: 'Are you sure you want to delete this To-Do?' } %>
      <%= link_to t.title, category_todo_path(@category, t), class: 'todo_title_link' %>
      <%= t.user.name if t.user.present? %>
     </div>
    
  <% end %>
  </div>
</div>

<div class="col-md-5 box_sidebar">
  <div class="box_sidebar_element">
  <%= link_to "Delete Category", category_path, method: :delete, class: 'btn btn-danger delete_button_category', data: { confirm: 'Are you sure you want to delete this Category?'} %>
  </div>
  <div class="box_sidebar_element">
    <%= link_to "Create To-Do", new_category_todo_path(@category), class: 'btn btn-info btn-lg create_button_todo' %>
  </div>
  </div>
  
  
</div>
</div>


  